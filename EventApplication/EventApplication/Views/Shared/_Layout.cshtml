<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EventStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="header">
        @Scripts.Render("~/bundles/jquery")
        <h1>
            EVENT STORE
        </h1>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    // Navigation links after user logs in
                    <li><a href="id=current">Find an Event</a></li>
                    <li><a href="OrganizeanEvents">Organzise an Event</a></li>
                    <li><a href="id=Ticket">Ticket</a></li>
                }
                else
                {
                    // Navigation links before user logs in
                    <li><a href="id=current">Find an Event</a></li>
                    <li><a href="id=Account/OrganizinganEvents">Organzise an Event</a></li>
                    <li><a href="id=Summary/Ticket">Ticket</a></li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Copyright of the Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
